  img.logo__fallback(src='/images/logo.jpg', alt='RITMO')

  .logo(class="#{ current.path[0] == 'index' ? '' : 'is-hidden' }")

    img.logo__base-grid(src="/images/logo/logo_bg_grid.svg")
    img.logo__letter-r(src="/images/logo/logo_letter_r.svg")
    img.logo__letter-i(src="/images/logo/logo_letter_i.svg")
    img.logo__letter-t(src="/images/logo/logo_letter_t.svg")
    img.logo__letter-m(src="/images/logo/logo_letter_m.svg")
    img.logo__letter-o(src="/images/logo/logo_letter_o.svg")
    img.logo__sentence-top(src="/images/logo/logo_frase_top.svg")
