doctype html
html(lang='en')

  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,initial-scale=1')

    if environment !== 'production' || (current.path[0] === 'blog' && current.source !== 'index' && public.blog._data.posts[current.source].published === false)
      meta(name='robots', content='noindex, nofollow')

    title #{ title } | #{ tagline }

    meta(name='description' content='#{description}')

    // OG
    meta(property='og:title' content='#{ title }')
    meta(property='og:description' content='#{description}')
    meta(property='og:type' content='website')
    meta(property='og:url' content="#{url}/#{current.path.join('/').replace('/index', '')}")
    meta(property='og:site_name' content='#{siteName}')
    meta(property='og:image' content='#{url}/images/default-thumbnail.jpg')

    // Twitter
    meta(name='twitter:card' content='summary_large_image')
    meta(name='twitter:site' content='#{twitter}')
    meta(name='twitter:creator' content='#{twitter}')
    meta(name='twitter:title' content='#{ title }')
    meta(name='twitter:description' content='#{description}')
    meta(name='twitter:image' content='#{url}/images/logo.jpg')

    // ICONS
    link(rel='shortcut icon', href='/favicon.ico')

    // FONTS
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,700,300', rel='stylesheet', type='text/css')

    // CSS
    link(rel='stylesheet', href='/css/app.css')


  body

    include ../_partials/_header

    block page_content

    //- Add JS
    script(src='/js/site.min.js')

    if analytics
      include ../_partials/_analytics
